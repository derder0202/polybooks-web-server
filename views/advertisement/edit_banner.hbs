    <!--          Start Content-->
    <div id="layoutSidenav_content">
        <main>
            <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
                <div class="container-fluid px-4">
                    <div class="page-header-content">
                        <div class="row align-items-center justify-content-between pt-3">
                            <div class="col-auto mb-3">
                                <h1 class="page-header-title">
                                    <div class="page-header-icon"><i data-feather="award"></i></div>
                                    Sửa banner
                                </h1>
                            </div>
                            <div class="col-12 col-xl-auto mb-3">
                                <a class="btn btn-sm btn-light text-primary" href="/AdvertisingManagement">
                                    <i class="me-1" data-feather="arrow-left"></i>
                                    Trở lại trang banner
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main page content-->
            <div class="d-flex justify-content-center">
                    <div class="col-xl-8">
                        <div class="card mb-4 ">
                            <div class="card-header">Chi tiết banner</div>
                            <div class="card-body">

                                    <form action="" method="post">
                                        <div class="row gx-3 mb-3">
                                            <!-- Form Group (first name)-->
<!--                                            <div class="col-md-6">-->
<!--                                                <label class="small mb-1" for="inputFirstName">Người dùng</label>-->
<!--                                                <input class="form-control" name="" id="inputFirstName" type="text" placeholder="Enter your first name" value="{{editBanner.userId}}" readonly disabled/>-->
<!--                                            </div>-->
                                            <!-- Form Group (last name)-->
                                            <div class="col-md-6">
                                                <label class="small mb-1" for="inputLastName">ID người dùng</label>
                                                <input class="form-control" name="userId_banner" id="inputLastName" type="text" placeholder="Enter your last name" value="{{editBanner.userId}}" readonly disabled/>
                                            </div>
                                        </div>
<!--                                        <div >-->
<!--                                            <label class="small mb-1" for="inputUsername">Tình trạng</label>-->
<!--                                            <input class="form-control" id="inputUsername" type="text" placeholder="Enter your username" value="Đang sử dụng" />-->
<!--                                        </div>-->
                                        <div class="mb-3">
                                            <label class="small mb-1" for="role">Tình trạng</label>
                                            <select name="isActive_banner" class="form-select" id="role">
                                                <option disabled selected>Mời bạn chọn tình trạng</option>
                                                <option value="true" data-display-value="Đang sử dụng">Đang sử dụng</option>
                                                <option value="false" data-display-value="Chưa sử dụng">Chưa sử dụng</option>
                                            </select>
<!--                                            <div id="roleError" class="error-message" style="color: red; font-size: 12px;"></div>-->
                                        </div>
                                        <div class="mb-3">
                                            <label class="small mb-1" for="inputUsername">Nội dung</label>
                                            <input class="form-control" name="content_banner" id="inputUsername" type="text" placeholder="Enter your username" value="{{editBanner.content}}" />
                                        </div>
                                        <label class="small mb-1" for="inputUsername">Hình ảnh Banner</label>
                                        <div class="card-body text-center">
                                            <img src="{{editBanner.image}}" name="image_banner" class="d-block w-100" alt="...">

                                        </div>
                                        <button style="font-weight: bold;margin-right: 15px;" class="btn btn-primary" type="submit">Lưu thông tin</button>

                                    </form>

                            </div>
                        </div>
                    </div>


            </div>
        </main>

    </div>

    <!--            End Content-->

</div>
