    <!--          Start Content-->
  <div id="layoutSidenav_content">
                <main>
                    <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
                        <div class="container-xl px-4">
                            <div class="page-header-content">
                                <div class="row align-items-center justify-content-between pt-3">
                                    <div class="col-auto mb-3">
                                        <h1 class="page-header-title">
                                            <div class="page-header-icon"><i data-feather="user-plus"></i></div>
                                            Thêm Mới Người Dùng
                                        </h1>
                                    </div>
                                    <div class="col-12 col-xl-auto mb-3">
                                        <a onclick="confirmRedirectToRegularMembers()" class="btn btn-sm btn-light text-primary">
                                            <i class="me-1" data-feather="arrow-left"></i>
                                            Quay lại danh sách người dùng
                                        </a>
                                        
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </header>
                    <!-- Main page content-->
                    <div class="container-xl px-4 mt-4">
                        <div class="row">
                            <div class="col-xl-4">
                                <!-- Profile picture card-->
                                <div class="card mb-4 mb-xl-0">
                                    <div class="card-header">Thông tin tài khoản</div>
                                    <div class="card-body text-center">
                                        <!-- Profile picture image-->
                                        <img class="img-account-profile rounded-circle mb-2" src="../assets/img/demo/user-placeholder.svg" alt="" />
                                        <!-- Profile picture help block-->
                                        <div class="small font-italic text-muted mb-4">JPG hoặc PNG không lớn hơn 5 MB</div>
                                        <!-- Profile picture upload button-->
                                        <button class="btn btn-primary" type="button">Tải ảnh lên</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-8">
                                <!-- Account details card-->
                                <div class="card mb-4">
                                    <div class="card-header">Thông Tin Chi Tiết</div>
                                    <div class="card-body">
                                    <form action="" method="post" onsubmit="return validateForm()">
                                    <!-- Form Group (Họ Tên)-->
                                    <div class="row gx-3 mb-3">
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="inputUsername">Họ tên</label>
                                            <input class="form-control" id="inputUsername" type="text" name="inputUsername" placeholder="Nhập họ tên của bạn" />
                                            <div id="fullNameError" class="error-message" style="color: red; font-size: 12px;"></div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="password">Password</label>
                                            <input class="form-control" id="password" type="text" name="password" placeholder="Nhập password của bạn" />
                                            <div id="passwordError" class="error-message" style="color: red; font-size: 12px;"></div>
                                        </div>
                                    </div>
                                    <!-- Form Row-->
                                    <div class="row gx-3 mb-3">
                                        <!-- Form Group (Phone)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="phoneNumber">Số điện thoại</label>
                                            <input class="form-control" id="phoneNumber" type="text" pattern="[0-9]+" name="phoneNumber" placeholder="Nhập số điện thoại của bạn" />
                                            <div id="phoneError" class="error-message" style="color: red; font-size: 12px;"></div>
                                        </div>
                                        <!-- Form Group (email address)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="email">Email</label>
                                            <input class="form-control" id="email" type="email" name="email" placeholder="Nhập email của bạn" />
                                            <div id="emailError" class="error-message" style="color: red; font-size: 12px;"></div>
                                        </div>
                                    </div>
                                    <!-- Form Row        -->
                                    <div class="row gx-3 mb-3">
                                        
                                        <!-- Form Group (Giới Tính)-->
                                        {{!-- <div class="col-md-6">
                                            <label class="small mb-1" for="gender">Giới tính</label>
                                            <input class="form-control" id="gender" type="text" name="gender" placeholder="Nhập giới tính của bạn" />
                                            <div id="genderError" class="error-message" style="color: red; font-size: 12px;"></div>
                                        </div> --}}
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="gender">Giới tính</label>
                                                <select name="gender" class="form-select" id="gender">
                                                    <option disabled selected>Mời bạn chọn giới tính</option>
                                                    <option value="male" data-display-value="Nam">Nam</option>
                                                    <option value="female" data-display-value="Nữ">Nữ</option>
                                                </select>
                                            <div id="genderError" class="error-message" style="color: red; font-size: 12px;"></div>
                                        </div>
                                        <!-- Form Group (Vai trò)-->
                                        {{!-- <div class="col-md-6">
    <label class="small mb-1" for="role">Vai trò</label>
    <select name="member_role" class="form-select" id="role" disabled>
        <option value="0" selected>Thường</option>
    </select>
    <div id="roleError" class="error-message" style="color: red; font-size: 12px;"></div>
</div> --}}
                                    <div class="col-md-6">
                                        <label class="small mb-1" for="role">Vai trò</label>
                                        <input type="text" name="member_role" class="form-control" id="role" value="Thường" readonly data-value="0">
                                        <div id="roleError" class="error-message" style="color: red; font-size: 12px;"></div>
                                    </div>
                                    </div>
                                    <!-- Form Row-->
                                    
                                    <!-- Save changes button-->
                                    <div class="card-body text-center">
                                        <button style="font-weight: bold;margin-right: 15px;" class="btn btn-primary" type="submit">Đồng ý</button>
                                        <button id="cancelButton" style="background: rgb(211, 211, 211); color: #949292; font-weight: bold; border: solid 1px rgb(199, 198, 198);" class="btn btn-primary" type="button">Hủy</button>
                                    </div>
                                </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="footer-admin mt-auto footer-light">
                    <div class="container-xl px-4">
                        <div class="row">
                            <div class="col-md-6 small">Copyright &copy; Your Website 2021</div>
                            <div class="col-md-6 text-md-end small">
                                <a href="#!">Privacy Policy</a>
                                &middot;
                                <a href="#!">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>    

    <!--            End Content-->

</div>
