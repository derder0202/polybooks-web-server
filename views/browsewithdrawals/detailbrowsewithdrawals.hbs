    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.28.0/feather.min.js" crossorigin="anonymous"></script>
    <script src="/js/jscustom.js"></script>
    <script src="/js/jscustomchange.js"></script>
    <script src="/js/dialogruttien.js"></script>
    <style>
        .error-message {
        color: red; /* Màu chữ đỏ cho thông báo lỗi */
    }
    </style>
</head>
<body class="nav-fixed">
{{> nav_header}}
<div id="layoutSidenav">
    <!--            Sidebar-->
    {{> sidebar}}
    <!--            End Sidebar-->

    <!--          Start Content-->
 <div id="layoutSidenav_content">
        <main>
            <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
                <div class="container-xl px-4">
                    <div class="page-header-content">
                        <div class="row align-items-center justify-content-between pt-3">
                            <div class="col-auto mb-3">
                                <h1 class="page-header-title">
                                    <div class="page-header-icon"><i data-feather="user"></i></div>
                                    Thông tin chi tiết
                                </h1>
                            </div>
                            <div class="col-12 col-xl-auto mb-3">
                                <a class="btn btn-sm btn-light text-primary" href="/BrowseWithdrawals">
                                    <i class="me-1" data-feather="arrow-left"></i>
                                    Quay lại
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main page content-->
            <div class="container-fluid px-4">
                <!-- Account page navigation-->
               
                <div class="d-flex justify-content-center">
                    <div class="col-xl-8">
                        <div class="card mb-4 ">
                            <div class="card-header">Chi tiết</div>
                            <div class="card-body">
                                    <form method="post" action="/BrowseWithdrawals/detailbrowsewithdrawals/{{detailBrowsewithdrawals._id}}">
                                        <div class="row gx-3 mb-3">
                                            <div class="col-md-6">
                                                <label class="small mb-1" for="inputBirthday">Người dùng</label>
                                                <input value="{{detailBrowsewithdrawals.userId.fullName}}" class="form-control"  disabled readonly/>
                                                <div id="birthdayError" class="error-message" style="color: red; font-size: 12px;"></div>
                                            </div>
                                  
                                            <div class="col-md-6">
                                                <label class="small mb-1" for="email">Chủ tài khoản</label>
                                                <input value="{{detailBrowsewithdrawals.bankName}}" class="form-control" disabled readonly/>
                                                <div id="emailError" class="error-message" style="color: red; font-size: 12px;"></div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="small mb-1" for="email">Số tài khoản</label>
                                                <input value="{{detailBrowsewithdrawals.bankNumber}}" class="form-control" disabled readonly/>
                                                <div id="emailError" class="error-message" style="color: red; font-size: 12px;"></div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="small mb-1" for="email">Số tiền rút</label>
                                                <input value="{{formatCurrency detailBrowsewithdrawals.withdrawAmount}}" class="form-control" disabled readonly/>
                                                <div id="emailError" class="error-message" style="color: red; font-size: 12px;"></div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="small mb-1" for="email">Mã ngân hàng</label>
                                                <input value="{{detailBrowsewithdrawals.bankCode}}" class="form-control" disabled readonly/>
                                                <div id="emailError" class="error-message" style="color: red; font-size: 12px;"></div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="small mb-1" for="email">Mô tả</label>
                                                <input value="{{detailBrowsewithdrawals.description}}" class="form-control" disabled readonly/>
                                                <div id="emailError" class="error-message" style="color: red; font-size: 12px;"></div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="small mb-1" for="email">Ngày yêu cầu rút</label>
                                                <input value="{{formatTime detailBrowsewithdrawals.createdAt}}" class="form-control" disabled readonly/>
                                                <div id="emailError" class="error-message" style="color: red; font-size: 12px;"></div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="small mb-1" for="inputUsername">Lý do không duyệt</label>
                                                <input id="reasonInput" class="form-control" type="text" name="replywithdraw" value="{{replywithdraw}}">
                                                <span class="error-message" id="reasonError"></span>
                                            </div> 
                                        </div>
                                        <div class="card-body text-center">
                                            <button style="font-weight: bold;margin-right: 15px;" class="btn btn-primary" type="submit" name="action" value="replys" onclick="approvePost()">Duyệt rút tiền</button>
                                            <button style="background: rgb(211, 211, 211); color: #949292; font-weight: bold; border: solid 1px rgb(199, 198, 198);" class="btn btn-primary" type="submit" name="action" value="noreplys" onclick="rejectPost()">Không duyệt</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
    </div>

    <!--            End Content-->

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
